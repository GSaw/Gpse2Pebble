<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:id="@+id/textView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/hello_world"/>
    <Button android:id="@+id/button_start" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Start Service" android:layout_below="@+id/textView" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
    <Button android:id="@+id/button_stop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Stop Service" android:layout_below="@+id/button_start" android:layout_alignParentStart="true"/>
    <Button android:id="@+id/button_record" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Start Track Recording" android:layout_below="@+id/button_stop" android:layout_alignParentStart="true"/>
    <Button android:id="@+id/button_pause" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pause Track Recording" android:layout_below="@+id/button_record" android:layout_alignParentStart="true"/>
    <Button android:id="@+id/button_continue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Continue Track Recording" android:layout_below="@+id/button_pause" android:layout_alignParentStart="true"/>
    <Button android:id="@+id/button_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Check Status Track Recording" android:layout_below="@+id/button_continue" android:layout_alignParentStart="true"/>
    <TextView android:id="@+id/text_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="status unknown" android:layout_below="@+id/button_status" android:layout_alignParentStart="true"/>
</RelativeLayout>